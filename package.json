{
    "name": "LifeQuality",
    "displayName": "生活质量",
    "description": "提示VsCode的使用生活质量",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": ["onStartupFinished"],
    "main": "./src/index.js",
    "contributes": {
        "commands": [
            {
                "command": "LifeQuality.helloWorld",
                "title": "Hello World"
            }
        ],
        "configuration": [
            {
                "title": "背景图片（重启生效）",
                "properties": {
                    "LifeQuality.background.all.isOpened": {
                        "type": "boolean",
                        "description": "是否开启图片背景",
                        "default": true
                    },
                    "LifeQuality.background.all.showType": {
                        "type": "string",
                        "description": "背景图片显示区域模式",
                        "default": "fullScreen",
                        "enum": ["fullScreen", "partition"],
                        "enumDescriptions": [
                            "全屏显示背景图片",
                            "每个区域单独显示"
                        ]
                    },
                    "LifeQuality.background.fullScreen.imgUrls": {
                        "type": "array",
                        "description": "全屏背景图片地址，可以添加多个并设置背景选择机制",
                        "default": [],
                        "items": {
                            "type": "string"
                        }
                    },
                    "LifeQuality.background.fullScreen.selectType": {
                        "type": "string",
                        "description": "在配置了多个背景图片时有效，背景图片选择模式",
                        "default": "random",
                        "enum": ["random", "carousel"],
                        "enumDescriptions": [
                            "在启动是随机显示一张图片",
                            "轮播所有的背景图片"
                        ]
                    },
                    "LifeQuality.background.fullScreen.opacity": {
                        "type": "number",
                        "description": "全屏背景图片透明度，全透明0到不透明1，推荐0.075",
                        "default": 0.075
                    }
                }
            },
            {
                "title": "笔记",
                "properties": {
                    "LifeQuality.笔记.全屏背景图片": {
                        "type": "array"
                    }
                }
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.54.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "eslint": "^8.47.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "typescript": "^5.1.6",
        "@vscode/test-electron": "^2.3.4"
    }
}
